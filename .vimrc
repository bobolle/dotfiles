filetype plugin indent on
filetype indent on
syntax on
inoremap jk <Esc>

colorscheme mongi

set nocompatible
set autoindent
set number
set ruler
set wrap
set hidden
set noshowmatch
set ttyfast
set showmode
set showcmd
set hlsearch
set incsearch
set ignorecase
set smartcase

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

set scrolloff=10

let g:loaded_matchparen=1

set laststatus=2
